                       Margin="50,50,1,30">
                <Run Text="FlipView "/>
                <Run Text="Context " FontWeight="Medium"/>
                <Run Text="Indicator"/>
                </TextBlock>
            </Grid>

            <FlipView x:Name="WorkingFlipView"
                  Grid.Row="1"
                  Grid.Column="0" Style="{StaticResource FlipViewStyle1}"
                  >

