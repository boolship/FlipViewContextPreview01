                  Grid.Row="0"
                  Grid.Column="0"
                  >

        </FlipView>

        <Grid x:Name="WorkingGridContent"
              Grid.Row="0"
              Grid.Column="1"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
